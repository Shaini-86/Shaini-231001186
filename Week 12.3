import csv
import sys

def calculate_average_marks(input_data):
    # Read the data using csv.DictReader to handle varying column order
    reader = csv.DictReader(input_data, delimiter=' ')
    total_marks = 0
    student_count = 0

    for row in reader:
        # Accumulate total marks and count the students
        total_marks += int(row['MARKS'])
        student_count += 1
